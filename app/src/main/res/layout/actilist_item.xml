<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:focusable="false"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/acti_image"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:focusable="false"
            android:src="@drawable/a1"
            >
        </ImageView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:focusable="false"
            android:layout_height="100dp">
            <TextView
                android:id="@+id/acti_title"
                android:layout_width="match_parent"
                android:focusable="false"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:inputType="textMultiLine"
                android:singleLine="false"
                android:ellipsize="none"
                android:text="Good好文章2312312312312312312sdfsafda111111111111"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                >
            </TextView>
            <TextView
                android:id="@+id/acti_author"
                android:focusable="false"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:layout_below="@id/acti_title"
                android:text="itfxq"
                android:textSize="20sp"
                >
            </TextView>
            <TextView
                android:id="@+id/acti_createTime"
                android:layout_width="match_parent"
                android:focusable="false"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:layout_below="@id/acti_title"
                android:layout_toRightOf="@id/acti_author"
                android:text="20201118"
                android:textSize="20sp"
                >
            </TextView>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>