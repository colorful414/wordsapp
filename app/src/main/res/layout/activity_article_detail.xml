<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ArticleDetailActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <ImageView
        android:id="@+id/arti_detail_imgUrl"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/ic_launcher_background">
    </ImageView>
    <TextView
        android:id="@+id/arti_detail_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Hello ITFXQ"
        android:textSize="20sp">
    </TextView>

    <TextView
        android:id="@+id/arti_detail_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="textMultiLine"
        android:minLines="100"
        android:maxLines="200"
        android:text="Hello ITFXQ 手动阀水水水水水水水水水水水水水水水水水水水水水水水水水水水水水水水水水水水水水水水水水水水水"
        android:textSize="20sp">
    </TextView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>